# Environment Variables for Survey Management Application
# Copy this file to .env.development or .env.production and update the values

# Server Configuration
# Use PORT=5001 for development, PORT=5000 for production
PORT=5001
NODE_ENV=development

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-256-bits-long-replace-this-immediately
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=12

# Database Configuration
# Use different database files for dev/prod isolation
DATABASE_PATH=./survey-dev.db
DB_NAME=survey-dev.db

# CORS Configuration
# Use http://localhost:3001 for development, http://localhost:3000 for production
ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001
FRONTEND_BASE_URL=http://localhost:3001

# Default Admin Credentials (CHANGE IMMEDIATELY)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_CREATOR_USERNAME=creator
DEFAULT_CREATOR_PASSWORD=creator123

# Security Headers
ENABLE_SECURITY_HEADERS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
